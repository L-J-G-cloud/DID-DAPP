{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",  // 这里需要配置
    "types": [ "vite/client" ],
    "paths": {
      "@/*": ["./src/*"]  // 这里需要配置
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/components/country/contry.js", "src/plugins/vconsole.js", "src/imags.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
